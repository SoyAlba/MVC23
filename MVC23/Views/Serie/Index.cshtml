@model IEnumerable<MVC23.Models.SerieModelo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom_Serie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var serie in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => serie.Nom_Serie)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => serie.Marca.ID)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@serie.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@serie.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@serie.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
