<from method="get" >
    <select id="marcaID" name="marcaID" asp-items="ViewBag.lasMarcas" onchange="this.from.submit()"></select>
    <select id="serieID" name="serieID" asp-items="ViewBag.lasSeries" onchange="this.frm.submit()"></select>
    
</from>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Matricula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Serie)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Matricula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Serie.Id)
